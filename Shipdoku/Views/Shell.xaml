<Window x:Class="Shipdoku.Views.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shipdoku.Views"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="450" Width="600">
    <Grid>
        <Label Content="{Binding Title}" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0, 60" FontSize="24"/>
        <Button Content="Rätsel generieren" Command="{Binding NavigateCommand}" CommandParameter="Shipdoku" Height="30" Width="100"/>
        <Button Content="Eigenes Rätsel erstellen" Height="30" Width="140" VerticalAlignment="Top" Margin="0, 250, 0 ,0"/>
        <!--<Button Command="{Binding NavigateCommand}" CommandParameter="StartMenu" Margin="5" Height="20" Width="100">Navigate to Start menu</Button>-->
        <ContentControl prism:RegionManager.RegionName="ContentRegion" Margin="10,10,0,0"/>
        
    </Grid>
</Window>
